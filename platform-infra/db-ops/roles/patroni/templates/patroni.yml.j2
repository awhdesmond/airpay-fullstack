scope: {{ 'postgres-main' if 'is_failover' not in group_names else 'postgres-dr' }}
name: {{ inventory_hostname }}

restapi:
  listen: {{ ansible_default_ipv4.address }}:8008
  connect_address: {{ ansible_default_ipv4.address }}:8008

etcd:
  hosts: {{ etcd_endpoints }}

bootstrap:
  dcs:
    ttl: 30
    loop_wait: 10
    retry_timeout: 10
    maximum_lag_on_failover: 1048576
    # Force synchronous replication for regional nodes
    synchronous_mode: true
    postgresql:
      use_pg_rewind: true
      use_slots: true
      parameters:
        wal_level: replica
        hot_standby: on
        wal_keep_segments: 8
        max_wal_senders: 10
        max_replication_slots: 10
        hot_standby_feedback: on

postgresql:
  listen: {{ ansible_default_ipv4.address }}:5432
  connect_address: {{ ansible_default_ipv4.address }}:5432
  data_dir: {{ patroni_postgresql_data_dir }}
  bin_dir: {{ patroni_postgresql_bin_dir }}
  authentication:
    replication:
      username: replicator
      password: {{ repl_password }}
    superuser:
      username: postgres
      password: {{ super_password }}
  parameters:
    unix_socket_directories: '.'

tags:
  nosync: {{ 'true' if labels.is_async == 'true' else 'false' }}
  nofailover: {{ 'true' if labels.is_backup == 'true' else 'false' }}

# --- DR Configuration ---
{% if 'is_failover' in group_names and patroni_enable_standby_mode | default(true) %}
standby_cluster:
  # Point to any main node, Patroni handles redirection
  host: {{ groups['main_nodes'] | map('extract', hostvars, 'ansible_host') | first }}
  port: 5432
  primary_slot_name: dr_slot
{% endif %}
